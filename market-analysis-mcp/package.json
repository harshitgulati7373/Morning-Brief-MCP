{
  "name": "market-analysis-mcp",
  "version": "1.0.0",
  "description": "Unified MCP server for market analysis data aggregation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "setup:auth": "ts-node scripts/setup-auth.ts",
    "setup:gmail-oauth": "ts-node scripts/setup-gmail-oauth.ts",
    "config:sources": "ts-node scripts/config-sources.ts",
    "test:connections": "ts-node scripts/test-connections.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:performance": "jest tests/performance --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "lint": "eslint src/**/*.ts scripts/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts scripts/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "market-analysis",
    "trading",
    "news",
    "podcasts",
    "gmail"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "googleapis": "^140.0.0",
    "node-cache": "^5.1.0",
    "rss-parser": "^3.13.0",
    "sqlite3": "^5.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
